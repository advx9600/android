<?xml version="1.0" encoding="utf-8"?>
<com.dafeng.opensource.ui.widget.CheckableItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkable_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/image1"
        android:layout_width="40.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="12.0dip"
        android:layout_marginTop="12.0dip" />

    <ImageButton
        android:id="@android:id/button1"
        android:layout_width="40.0dip"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text2"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/text1"
        android:background="@null"
        android:focusable="false"
        android:src="@drawable/btn_multiselect" />

    <TextView
        android:id="@id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="8.0dip"
        android:layout_toLeftOf="@android:id/button1"
        android:layout_toRightOf="@id/image1"
        android:paddingTop="12.0dip" />

    <LinearLayout
        android:id="@id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text1"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/text1"
        android:layout_toLeftOf="@android:id/button1"
        android:layout_toRightOf="@id/image1"
        android:paddingBottom="12.0dip"
        android:paddingTop="6.0dip" >

        <TextView
            android:id="@+id/filesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.0dip"
            android:maxLines="1" />

        <TextView
            android:id="@+id/server_mtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1" />
    </LinearLayout>

</com.dafeng.opensource.ui.widget.CheckableItemLayout>